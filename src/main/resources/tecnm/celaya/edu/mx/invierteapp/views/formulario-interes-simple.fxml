<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tecnm.celaya.edu.mx.invierteapp.controller.FormularioInteresSimple"
            prefHeight="400.0" prefWidth="600.0">

    <GridPane fx:id="gridFormInteresSimple" hgap="10" vgap="10" alignment="CENTER">
        <Label text="Formulario de Interés Simple" style="-fx-font-size: 20px; -fx-font-weight: bold;"
                GridPane.rowIndex="0" GridPane.columnIndex="0"
        />
        <Label text="Capital Inicial (C):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCapitalInicial" promptText="Ingrese el capital inicial" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

        <Label text="Tasa de Interés (i) %:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTasaInteres" promptText="Ingrese la tasa de interés" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

        <Label text="Tiempo (t) (años):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTiempo" promptText="Ingrese el tiempo en años" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

        <Button text="Calcular" onAction="#calcularInteresSimple" GridPane.rowIndex="6" GridPane.columnIndex="0" />

        <Label text="Interés Generado (I):" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="txtInteresGenerado" editable="false" GridPane.rowIndex="8" GridPane.columnIndex="0"/>

        <Label text="Monto Total (M):" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <TextField fx:id="txtMontoTotal" editable="false" GridPane.rowIndex="10" GridPane.columnIndex="0"/>

    </GridPane>

</VBox>
